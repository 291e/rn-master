{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react-native",
    "target": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["jest"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true, // JavaScript 파일을 허용하도록 설정
    "module": "esnext"
  },
  "include": ["src/**/*", "screens/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
